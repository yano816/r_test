<p id="notice"><%= notice %></p>
<div class="container ">
<div class="page-header">
<h1>つぶやき</h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th>名前</th>
      <th>ひとこと</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @diaries.each do |diary| %>
      <tr>
        <td><%= diary.name %></td>
        <td><%= diary.title %></td>
        <td><%= link_to '見る', diary,class: 'btn btn-primary' , :style=>"color:white;"%></td>
        <td><%= link_to '編集', edit_diary_path(diary),class: 'btn btn-primary', :style=>"color:white;" %></td>
        <td><%= link_to '削除', diary, method: :delete, data: { confirm: 'Are you sure?' } ,class: 'btn btn-primary', :style=>"color:white;"%></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to '新規', new_diary_path,class: 'btn btn-primary' , :style=>"color:white;"%>
</div>